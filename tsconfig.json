{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "target": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"],
      "~/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@infogata"]
  },
  "include": ["src/**/*"]
}
